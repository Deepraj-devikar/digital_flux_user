<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RateUs">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:text="Rate Us"
        android:textSize="20sp"
        android:textColor="@color/overlay_dark_80"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginTop="24dp"
        app:cardElevation="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/spacing_medium"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_xmedium"
            android:layout_marginLeft="@dimen/spacing_xmedium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/img_btn_rate_us_rate1"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/white"
                    android:src="@drawable/icon_angry_48"/>

                <ImageButton
                    android:id="@+id/img_btn_rate_us_rate2"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/white"
                    android:src="@drawable/icon_sad_48"/>

                <ImageButton
                    android:id="@+id/img_btn_rate_us_rate3"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/white"
                    android:src="@drawable/icon_neutral_48"/>

                <ImageButton
                    android:id="@+id/img_btn_rate_us_rate4"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/white"
                    android:src="@drawable/icon_happy_48"/>

                <ImageButton
                    android:id="@+id/img_btn_rate_us_rate5"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/white"
                    android:src="@drawable/icon_lol_48"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_5"/>

            <EditText
                android:id="@+id/et_rate_us_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:hint="Comment"
                android:textSize="18sp"
                android:background="@android:color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@color/grey_5"/>

            <Button
                android:id="@+id/btn_rate_us_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_xmedium"
                android:layout_marginLeft="@dimen/spacing_xmedium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_gravity="center"
                android:text="Submit"
                android:background="@drawable/btn_round_corner_blue"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>